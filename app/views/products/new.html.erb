<div class="product">

    <%= form_for(@product, url: products_path, html: { id: "product-create-form" }) do |f| %>
        <h1 class="h1-big">
            Create Product
        </h1>

        <div class="form-group">
            <h4>
                <%= f.label :title_field, "Title" %>
            </h4>
            <%= f.text_field :title, required: true, id: "product_title_field", class: 'form-control' %>
        </div>

        <div class="form-group">
            <h4>
                <%= f.label :price_field, "Price" %>
            </h4>
            <%= f.text_field :price, id: "product_price_field", class: 'form-control' %>
        </div>

    <!-- this is where u add image -->
        <div class="form-group">
              <h4 class="text-center">
                  Product Image
              </h4>
              <div id="preview-image">
                  <% if @product.image? %>
                  <%= image_tag @product.image, class: "img-settings img-responsive center-block" %>
                  <% end %>
              </div>
          </div>

          <div id="preview-image">

              <div class="form-group">
                  <%= f.file_field :image, id: "product_image_field", class: 'form-control image-uploader' , class: 'image-uploader' %>
              </div>

          </div>


    <!-- Create button -->

        <div class="form-group text-center">
            <%= f.submit "Created Product", class: "btn btn-success btn-lg" %>
        </div>
    <% end %>

</div>
