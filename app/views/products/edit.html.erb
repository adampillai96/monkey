<div class="product">

    <%= form_for(@product, url: product_path(@product), html: { id: "product-update-form" }) do |f| %>
    <h1 class="h1-big">
        Edit Product
    </h1>

    <div class="form-group">
        <h4>
            <%= f.label :title_field, "Title" %>
        </h4>
        <%= f.text_field :title, required: true, id: "product_title_field", class: 'form-control' %>
    </div>

    <div class="form-group">
        <h4>
            <%= f.label :text_field, "Price" %>
        </h4>
        <%= f.text_field :price, id: "product_price_field", class: 'form-control' %>
    </div>

    <!-- Update button -->

    <div class="form-group text-center">
        <%= f.submit "Update Product", class: "btn btn-success btn-lg" %>
    </div>
    <% end %>

</div>
